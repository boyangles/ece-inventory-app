<div class="search">
  <%= form_for @request_item, :url => return_request_item_path(@request_item), method: :post do |f| %>

      <div class="form-group">


        <div class="form-group">
          <%= f.label "Returning Assets Serial Tags", class: 'col-lg-2 control-label' %>
          <div class="col-lg-12">
            <%= select_tag :serial_tags_loan_return, options_for_select(Stock.where(item_id: @request_item.item_id, available: false).map { |u| [u.serial_tag, u.serial_tag] } ),
                           { include_blank: true, multiple: true, class: 'chosen-select' } %>
          </div>
        </div>

      </div>

      <br><br>

      <%= f.submit "Submit", class: "btn btn-default col-lg-2 col-lg-offset-10", type: "submit" %>
  <% end %>
</div>
