<br>
<div class="panel panel-info">
	<div id="disburse">
		<div class="panel-body">
			<% request = Request.find(disburse.request_id) %>
			<% item = Item.find(disburse.item_id) %>
			<% user = User.find(request.user_id) %>

			<div class="col-lg-6">
				<strong>User </strong><%= link_to user.username, user_path(user.id) %>
				<br>
				<strong>Item </strong><%= link_to item.unique_name, item_path(item.id) %>
				<br>
				<strong>Quantity Disbursed </strong><%= disburse.quantity_disburse %>
				<br>
			</div>

			<div class="col-lg-6 text-right">
				<%= link_to "Related Request", request_path(request.id) %>
				<br>
				<%= request.updated_at.strftime("%m-%d-%Y") %>
			</div>

		</div>
	</div>
</div>
