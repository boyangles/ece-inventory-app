<div class="search">
  <%= form_for @loan, :url => path(@loan), method: :put do |f| %>

      <div class="form-group">
        <div class="form-group">
          <%= f.label "Specify Serial Tags To Disburse", class: 'col-lg-2 control-label' %>
          <div class="col-lg-12">
            <%= select_tag :serial_tags_to_disburse, options_for_select(RequestItemStock.filter({request_item_id: @request_item.id, unavailable: true}).map { |u| [u.stock.serial_tag, u.stock.serial_tag] } ),
                           { include_blank: true, multiple: true, class: 'chosen-select' } %>
          </div>
        </div>
      </div>

      <br><br>

      <%= f.submit "Submit", class: "btn btn-default col-lg-2 col-lg-offset-10", type: "submit" %>
  <% end %>
</div>
