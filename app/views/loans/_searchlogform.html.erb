<div class="search">
	<%= form_for loans_index_path, :method => 'get' do |f| %>

		<div class="search-loans">
			<div class="form-group">
				<%= f.label "Search by Item Name", :class=>"col-lg-3 control-label" %><br>
				<div class="col-lg-12">
					<%= text_field_tag :search_item, params[:search_item], :placeholder => "item", :class=> "form-control" %>
				</div>
			</div><br>

			<div class="form-group">
				<%= f.label "Search by User Name", :class=>"col-lg-3 control-label" %><br>
				<div class="col-lg-12">
					<%= text_field_tag :search_user, params[:search_user], :placeholder => "user", :class=> "form-control" %>
				</div>
			</div><br><br>

			<%= f.submit "Search", class: "btn btn-default col-lg-2 col-lg-offset-10", type: "submit" %>
		</div>
	<% end %>
</div>
