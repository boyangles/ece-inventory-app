<br>
<div class="panel panel-info">
	<div id="loan">
		<div class="panel-body">
			<% request = Request.find(loan.request_id) %>
			<% item = Item.find(loan.item_id) %>
			<% user = User.find(request.user_id) %>

			<div class="col-lg-6">
				<strong>User </strong><%= link_to user.username, user_path(user.id) %>
				<br>
				<strong>Item </strong><%= link_to item.unique_name, item_path(item.id) %>
				<br>
				<strong>Quantity Loaned </strong><%= loan.quantity_loan %>
				<br>
				<!--<br>-->
				<!--<strong>Due Date </strong> tbd-->
			</div>

			<div class="col-lg-5 pull-right">
				<button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#myModal1">Return</button>
				<div id="myModal1" class="modal fade" role="dialog">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal">&times;</button>
							</div>
							<%= render 'returnquantityform', request_item: loan %>
						</div>
					</div>
				</div>

				</br>
				<button type="button" class="btn btn-info btn-block" data-toggle="modal" data-target="#myModal2">Convert to Disbursement</button>
				<div id="myModal2" class="modal fade" role="dialog">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal">&times;</button>
							</div>
							<%= render 'disbursequantityform', request_item: loan %>
						</div>
					</div>
				</div>


				<br>
				<br>
				<%= link_to "Related Request", request_path(request.id), class: "pull-right" %>
			</div>

		</div>
	</div>
</div>
