<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.username, user %>

  <% if current_user.privilege_admin? && !current_user?(user) %>
     <div class="pull-right"> <%= link_to "Delete User", user, method: :delete, data: { confirm: "Are you sure you want to do this? This is not reversible." } %> </div>
  <% end %>
</li>
