<%= form_for(request) do |f| %>
  <% @form_obj = request %>
  <% if @form_obj %>
    <%= render 'shared/error_messages', object: @form_obj %>
  <% end %>

  <p>
    <b>Item Requested</b>
    <%= request.item_name %>
  </p>

  <p>
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity, :required => true %>  </p>
  
  <p>
    <%= f.label 'User to distribute to' %><br>
    <%= collection_select(:user, :username, User.where(:status => 1), :username, :username, {:prompt => true}, {:required => true}) %>
  </p>

  <p>
    <%= f.label 'Administrator Comment' %><br>
    <%= f.text_area :response %>
  </p>

  <%= f.hidden_field :item_name, :value => request.item_name %>
  <%= f.hidden_field :reason, :value => request.reason %>
  <%= f.hidden_field :datetime, :value => Time.now %>
  <%= f.hidden_field :status, :value => "approved" %>
  <%= f.hidden_field :request_type, :value => "disbursement" %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
