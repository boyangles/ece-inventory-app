<p id="notice"><%= notice %></p>

 	<h1>Requests</h1>

	<div class="row">
  	<div class="col-md-8 col-md-offset-2">
    	<% if @requests.any? %>
      	<h3>No. Requests (<%= @requests.count %>)</h3>
  			<%= link_to "Outstanding Requests", requests_path(:status => "outstanding"), class: "btn btn-lg btn-primary" %>
 				<%= link_to "Approved Requests", requests_path(:status => "approved"), class: "btn btn-lg btn-primary" %>
 				<%= link_to "Denied Requests", requests_path(:status => "denied"), class: "btn btn-lg btn-primary" %>
 				<%= link_to "View All", requests_path, class: "btn btn-lg btn-primary" %>
 
      	<ol class="requests">
        	<%= render @requests %>
      	</ol>

      <%= will_paginate @requests %>
    <% end %>    
	 </div>
</div>


