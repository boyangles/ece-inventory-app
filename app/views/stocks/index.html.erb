
<div class="pull-right">
  <%= form_tag( create_stocks_item_path(@item), method: :post, multipart: true) do |f| %>
      <div class="form-group">
        <div class="col-lg-12">
          <%= number_field_tag :num_stocks, placeholder: 0, :class => "form-control" %>
        </div>
      </div>
      <%= submit_tag "Create Asset", class: "btn btn-default", type: "submit" %>
  <% end %>
</div>

<table class="table table-striped table-hover">
  <thead>
  <div class="text-center">
    <h1>
      <% if !@stocks.first.nil? %>
          <% @item = Item.where(id: @stocks.first.item_id).take %>
          <%= link_to @item.unique_name, item_path(@item.id) %>
      <% end %>
    </h1>
  </div>

<div class="pull-right">
  <%= link_to "Available", item_stocks_path(@item , available: true), class: "btn btn-lg btn-primary" %>
  <%= link_to "Unavailable", item_stocks_path(@item, available: false), class: "btn btn-lg btn-primary" %>
</div>

  <tr>
    <th>Serial Tag</th>
    <th>Available</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <%= render @stocks %>
  </tbody>
</table>

<div class="text-center">
  <%= will_paginate(@stocks) %>
</div>