<%= form_for (request_item), :url => return_request_item_path(request_item.id), :html => {:method => "put"}  do |f| %>
	<%= f.hidden_field :bf_status, :value => "bf_satisfied" %>
	<%= hidden_field_tag :quantity_to_return, params[:quantity_to_return], :value => request_item.quantity_loan %>
	<%= f.submit "Mark as Satisfied", class: "btn btn-success" %>
<% end %>			

