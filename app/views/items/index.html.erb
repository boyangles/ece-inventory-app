<% provide(:title, 'All Items') %>
<% if current_user.privilege_admin? %>
  <%= link_to "New Item", new_item_url, :class => "btn btn-primary" %>
<% end %>

<div class="center_jumbotron">
  <h1>Items</h1>
</div>

<div class="search">
	<%= form_for items_path, :method => 'get' do %>
  	<p class="submit_bar">
    	<%= text_field_tag :search, params[:search] %>
	 	</p>

  	<h3>Required Tags</h3>
  	<div class="tags">
		<% @tags.each do |tag| %>
    	<%= check_box_tag 'required_tag_names[]', 
      	tag.name, 
      	(@required_tag_filters.include? tag.name) %>
    	<%= tag.name %>
  	<% end %>
		</div>

  	<h3>Excluded Tags</h3>
		<div class="tags">
		<% @tags.each do |tag| %>
    	<%= check_box_tag 'excluded_tag_names[]', 
      	tag.name, 
      	(@excluded_tag_filters.include? tag.name) %>
    	<%= tag.name %>
  	<% end %>
		</div>

		<%= submit_tag "Search" %>
	<% end %>
</div>

<%= will_paginate %>

<ul class="items">
  <%= render @items %>
</ul>

<%= will_paginate %>

