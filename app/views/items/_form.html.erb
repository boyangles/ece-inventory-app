<%= form_for (item), :html => {:class => "form-horizontal"} do |f| %>
    <fieldset>
      <% if item.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

            <ul>
              <% item.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :unique_name, "unique_name", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :unique_name, class: "form-control", :placeholder=>"Electrical Part" %>
        </div>
      </div>
      
       <div class="form-group">
        <%= f.label :description, "description", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :desciprtion, class: "form-control", :placeholder=>"Description" %>
        </div>
      </div>

    <% if !Item.exists?(item) || is_admin? %>

      <div class="form-group">
        <%= f.label :quantity, "quantity", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :quantity, class: "form-control",:placeholder=>"1" %>
        </div>
      </div>
      
      <% end %>


      <div class="form-group">
        <%= f.label :model_number, "model_number", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :model_number, class: "form-control",:placeholder=>"A-3423" %>
        </div>
      </div>

      <!-- For adding tags to items -->
      <p> <strong>Tags</strong></p>
      <% if Tag.all.count > item.tags.all.count %>
        <%= collection_select(:tag, :tag_id, Tag.all - item.tags.all, :id, :name, {:prompt => "-- select tags to add to item --"}, {:multiple=> true}) %>
      <% else %>
          <p>No more tags available</p>
      <% end %>

      <!-- For removing tags from items -->
      <p> <strong>Associated Tags</strong></p>
      <% if item.tags.count > 0 %>
          <%= collection_select(:tag_to_remove, :tag_id_remove, item.tags.all, :id, :name, {:prompt => "-- select tags to remove from item --"}, {:multiple=> true}) %>
      <% else %>
          <p>No tags associated with <%= item.unique_name %></p>
      <% end %>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="submit" class="btn-default btn-lg btn-block">Submit</button>
          </div>
        </div>
      
   <div class="actions">
      <%= f.submit %>
    </div>

    </fieldset>

<% end %>
