<%= form_for (item), :html => {:class => "form-horizontal"} do |f| %>
    <fieldset>
      <% if item.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

            <ul>
              <% item.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :unique_name, "Unique Name", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :unique_name, class: "form-control", :placeholder=>"Electrical Part" %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :quantity, "Quantity", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :quantity, class: "form-control",:placeholder=>"1" %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :model_number, "Model Number", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :model_number, class: "form-control",:placeholder=>"A-3423" %>
        </div>
      </div>

      <!-- For adding tags to items -->
      <p> <strong>Tags</strong></p>
      <% if Tag.all.count > item.tags.all.count %>
          <div class="form-group">
            <label for="select" class="col-lg-2 control-label">select tags to add to item</label>
            <select multiple data-role="tagsinput">
              <option value="Amsterdam">Amsterdam</option>
              <option value="Washington">Washington</option>
              <option value="Sydney">Sydney</option>
              <option value="Beijing">Beijing</option>
              <option value="Cairo">Cairo</option>
            </select>
          </div>
      <% else %>
          <p>No more tags available</p>
      <% end %>



        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="submit" class="btn-default btn-lg btn-block">Submit</button>
          </div>
        </div>

    </fieldset>
<% end %>
