<%= form_for(item) do |f| %>

	<% if Item.exists?(item.id) %>
		<div class="form-group">
			<%= f.label :quantity, "Quantity", class: "col-md-4 control-label" %>
      <div class="col-md-8">
      <%= f.number_field :quantity, class: "form-control",:placeholder=>"0" %>
      </div>
    </div>

		<div class="form-group">
			<%= f.label :last_action, "How should this quantity change be logged?" %>
		
			<div class="col-md-8">
				<% if is_admin? %>
					<%= collection_select(:item, :id, Item.admin_actions, :id, :last_action, :required => true)%>
					msg = ""
				<% elsif is_manager? %>
					msg = "This will be logged as an acquisition/destruction/loss."
				<% end %>
			</div>
		</div>

  <% end %>

  <%= f.submit :confirm => "Are you sure?" + msg %>
<% end %>
