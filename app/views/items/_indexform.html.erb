<%= form_for (request_item) do |f| %>
	<table>
		<tbody>
			<%= f.hidden_field :item_id, :value => request_item.item_id %>
			<%= f.hidden_field :request_id, :value => request_item.request_id %>
			<tr>
			<td>
				<%= f.number_field :quantity_loan, class: "col-lg-12", id: "loan_id", min: 0, required: true %><br>
			</td>
			<td>
        <%= f.number_field :quantity_disburse, class: "col-lg-12", id: "disburse_id", min: 0, required: true %><br>
			</td>
			<td>
				<!--<%= number_field_tag :quantity_for_bf, params[:quantity_for_bf], class: "col-lg-12", value: 0 %>-->
			</td>

			<td>
				<%= button_tag "", type: "submit", class: "btn btn-default glyphicon glyphicon-shopping-cart" %>
			</td>
			</tr>
		</tbody>
	</table>
<% end %>
