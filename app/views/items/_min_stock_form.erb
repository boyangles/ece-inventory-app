<%= form_for(minimum_stock_path, url: update_all_minimum_stock_path, method: 'patch') do |f| %>

    <table class="table table-striped table-hover ">
      <thead>
      <tr>
        <th>Item Name</th>
        <th>Quantity in Stock</th>
        <th>Minimum Stock</th>
        <th>Selected</th>
      </tr>
      </thead>
      <script type="text/javascript">
          function selectAll(){
              $("input:checkbox").each(function(){
                  $(this).attr('checked', true);
              });

              return false;
          }
      </script>
      <script type="text/javascript">
          function selectNone(){
              $("input:checkbox").each(function(){
                  $(this).attr('checked', false);
              });

              return false;
          }
      </script>

      <% item.each do |f| %>
          <tr>
            <td><%= link_to f.unique_name, item_path(f.id) %></td>
            <td><%= f.quantity %></td>
            <td><%= f.minimum_stock %></td>
            <td>
              <div class="col-lg-1">
                <%= check_box_tag :item_stocked , true, false , {}%>
              </div>
              </div>
            </td>
          </tr>

      <% end %>

      <tbody>
      </tbody>
    </table>

    <%= will_paginate @items %>

    <div class="form-group">
      <%= f.label :min_quantity, "Wanted Quantity", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= text_field_tag :min_quantity, params[:min_quantity], :placeholder => "Minimum Stock",  :class => "form-control" %>
      </div>
    </div>

    <%= f.submit "Modify minimum stock", class: "btn btn-default col-lg-2 col-lg-offset-10", type: "submit" %>
<% end %>