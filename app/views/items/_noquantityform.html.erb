<%= form_for (item), :html => {:class => "form-horizontal"} do |f| %>
    <fieldset>
      <% if item.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

            <ul>
              <% item.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :unique_name, "Unique Name", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :unique_name, class: "form-control", :placeholder=>"Name" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, "Description", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :description, class: "form-control",:placeholder=>"Description" %>
        </div>
      </div>

     <div class="form-group">
        <%= f.label :model_number, "Model Number", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :model_number, class: "form-control",:placeholder=>"0" %>
        </div>
      </div>

      <div class="form-group">
        <label for="select" class="col-lg-2 control-label">Tags</label>
        <div class="col-lg-10">
          <div class="form-group">
            <%=collection_select(:tag, :tag_id, Tag.all - item.tags.all, :id, :name, {:prompt => "-- select tags to add to item --"}, {:multiple=> true, :class=>"form-control", :id=>"select"},) %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="select" class="col-lg-2 control-label">Associated Tags</label>
        <div class="col-lg-10">
          <div class="form-group">
            <%=collection_select(:tag, :tag_id, item.tags.all, :id, :name, {:prompt => "-- select tags to remove from item --"}, {:multiple=> true, :class=>"form-control", :id=>"select"},) %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-8 col-lg-offset-2">
          <button type="submit" class="btn-default btn-lg btn-block">Submit</button>
        </div>
      </div>

    </fieldset>
<% end %>
