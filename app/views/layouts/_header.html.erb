<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "ECE Inventory", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>

        <% if logged_in? %>
            <li><%= link_to "Items", items_path %></li>

            <% if current_user.privilege_admin? %>
                <li><%= link_to "Users", users_path %></li>
                <li><%= link_to "Account Requests", accountrequests_path %>
                <li><%= link_to "Tags", tags_path %></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>

              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>

                <% request_label = (current_user.privilege_admin?) ?
                                           "Requests" :
                                           "My Requests" %>
                <li><%= link_to request_label, requests_path %></li>


                <li class="divider"></li>

                <li><%= link_to "Log out", logout_path, method: "delete" %></li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
